<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModelBase="clr-namespace:LastWorkout.ViewModels.Base;assembly=LastWorkout"
             viewModelBase:ViewModelLocator.AutoWireViewModel="true"
             BackgroundColor="{StaticResource BlackColor}"
             Title="Welcome to Last Workout"
             x:Class="LastWorkout.Views.StartCenterView">

    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" IsVisible="True">
        <Image Source="legpress.png" Aspect="AspectFit" IsVisible="True" />
        

        <!-- Place new controls here -->
    	<Label Text="See WorkOut History" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" 
           TextColor="White"/>
        <Button Text="CLICAR" TextColor="White" Command="{Binding NextPageCommand}" ></Button>
    </StackLayout>

</ContentPage>
